<% provide(:page_title, @post.title) %>
<% provide(:author, "active") %>

<div>
<%= link_to 'edit', edit_author_post_path(@post), class: 'btn btn-sm btn-warning' %>
<%= link_to 'remove', author_post_path(@post), method: :delete, data: { confirm: 'are you sure?'}, class: 'btn btn-sm btn-danger' %>
</div>

<div class="row">
  <div class="col-md-1 col-lg-2"></div>
  <div class="col-md-10 col-lg-8 text-xs-center">
    <h1><%= @post.title %></h1>
    <h6> <%= @post.published_date %>
    <h6><%= @post.body %></h6>
</div>

<%= link_to 'Edit', edit_author_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
